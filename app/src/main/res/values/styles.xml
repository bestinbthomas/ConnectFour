<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white2</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white2</item>
        <item name="buttonStyle">@style/myButton</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/FadedRect</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:titleMarginBottom">50dp</item>
    </style>
    <style name="myButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/RedLight</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/righteous_regular</item>
    </style>



</resources>
